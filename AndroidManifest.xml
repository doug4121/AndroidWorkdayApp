<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="doug.workdaysapp"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="doug.workdaysapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="doug.workdaysapp.AddWorkdayActivity"
            android:label="@string/title_activity_add_workday" >
        </activity>
        <activity
            android:name="doug.workdaysapp.DetailsActivity"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name="doug.workdaysapp.EditWorkdayActivity"
            android:label="@string/title_activity_edit_workday" >
        </activity>
        <activity
            android:name="doug.workdaysapp.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
